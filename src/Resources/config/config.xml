<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/master/src/Core/System/SystemConfig/Schema/config.xsd">

    <card>
        <title>S.HE TinyMCE</title>
        <title lang="de-DE">S.HE TinyMCE</title>
        <input-field type="single-select">
            <name>skin</name>
            <label>Skin</label>
            <label lang="de-DE">Aussehen</label>
            <options>
                <option>
                    <id>oxide</id>
                    <name>bright</name>
                    <name lang="de-DE">Hell</name>
                </option>
                <option>
                    <id>oxide-dark</id>
                    <name>dark</name>
                    <name lang="de-DE">Dunkel</name>
                </option>
            </options>
        </input-field>
        <input-field type="int">
            <name>height</name>
            <label>Height</label>
            <label lang="de-DE">Höhe</label>
        </input-field>
        <input-field type="bool">
            <name>spellcheck</name>
            <label>Spell check</label>
            <label lang="de-DE">Rechtschreibüberprüfung</label>
        </input-field>
        <input-field type="textarea">
            <name>contentcss</name>
            <label>Additional CSS files</label>
            <label lang="de-DE">Zusätzliche CSS-Dateien</label>
        </input-field>
        <input-field>
            <name>apiKey</name>
            <label>API Key</label>
            <label lang="de-DE">API Key</label>
        </input-field>
        <input-field type="bool">
            <name>enablePro</name>
            <label>Enable pro</label>
            <label lang="de-DE">Pro aktivieren</label>
        </input-field>
    </card>
</config>